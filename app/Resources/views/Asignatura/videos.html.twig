{% extends 'Asignatura/info_asignatura.html.twig' %}

{% block breadcrumbs %}

    <div>
        {# Definiendo los nodos del breadcrums #}
        {% set nodos = [
                {
                    'url': 'contenido_raiz',
                    'descripcion': '#', 
                }, 
                {
                    'url': 'contenido_asignatura',
                    'descripcion': asignatura.titulo, 
                    'parametros': {
                    	'asignatura': asignatura.titulo
                	}
                }, 
                {
                    'url': 'contenido_videos_categoria',
                    'descripcion': 'Videos de ' ~ asignatura.categoria, 
                }, 

            ] 
        %}            
        {% include('Contenido/breadcrums.html.twig') %}
    </div>

{% endblock %}

{% block cuerpo_asignatura %}
	<div>Matriz de videos:</div>
	{% for video in asignatura.videos %}
	    <div>
	        <iframe width="300" height="150" src="https://www.youtube.com/embed/{{video.url}}" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
	    </div>
	    <div>
	    	<p>{{video.descripcion}}</p>
	    </div>
    {% endfor %}
{% endblock %}


