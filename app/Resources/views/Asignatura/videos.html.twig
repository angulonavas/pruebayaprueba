{% extends 'Asignatura/info_asignatura.html.twig' %}

{% block breadcrumbs %}

    <div>
        {# Definiendo los nodos del breadcrums #}
        {% set nodos = [
                {
                    'url': 'contenido_raiz',
                    'descripcion': '#', 
                }, 
                {
                    'url': 'contenido_asignatura',
                    'descripcion': asignatura.titulo, 
                    'parametros': {
                    	'asignatura': asignatura.titulo
                	}
                }, 
                {
                    'url': 'contenido_videos_categoria',
                    'descripcion': 'Videos de ' ~ categoria.descripcion, 
                }, 

            ] 
        %}            
        {% include('Contenido/breadcrums.html.twig') %}
    </div>

{% endblock %}

{% block cuerpo_asignatura %}
	
    <div class="text-warning"><h4>Videos de la categor√≠a {{ categoria.descripcion ~ ':' }} </h4></div>
    
    <div class="card-columns">
    	{% for video in categoria.getVideos() %}

            <div class="card p-3 magictime twisterInDown">
        	    <div>
        	        <iframe width="300" height="150" src="https://www.youtube.com/embed/{{video.url}}" frameborder="0" allow="autoplay; encrypted-media" class="card-img-top" allowfullscreen></iframe>
        	    </div>
        	    <div class="card-body">
        	    	<p class="card-text">{{video.descripcion}}</p>
        	    </div>
            </div>
            
        {% endfor %}
    </div>
{% endblock %}
