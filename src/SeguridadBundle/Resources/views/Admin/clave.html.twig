{% extends 'SonataAdminBundle:CRUD:base_edit.html.twig' %}

{% block form %}
	<h3>{{ 'Cambia la clave del usuario ' ~ object.username }}</h3>

	{% if realizado %}
		<div class="bg-success">
			<h2>{{realizado}}</h2>
		</div>
	{% endif %}

    <div class="col-md-6">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="form-group">{{ form_row(form.password) }}</div>
        <div class="form-group">{{ form_row(form.recuperar) }}</div>
        {{ form_end(form) }}
    </div>	

{% endblock %}